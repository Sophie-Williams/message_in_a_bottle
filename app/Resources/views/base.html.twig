<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MIAB: Message In A Bottle{% endblock %}</title>
        <link rel="stylesheet" href="{{asset('css/global.css')}}"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('icons/favicon.ico') }}" />
        <script src="{{asset('js/jquery-3.2.1.min.js')}}"></script>
    </head>
    <body>

{% block header %}
<header>

          <a href="#" id="logo"><img src="{{ asset('img/miab-logo.png') }}" alt="Message In The Bottle - Logo"></a>


          <nav>

                <a href="#" id="menu-icon"></a>

                <ul>
                          {% if app.user is null %}
                                <li>
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                                        <a href="{{ path('fos_user_security_logout') }}">
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('fos_user_security_login') }}">{{ 'Connexion'|trans({}, 'FOSUserBundle') }}</a>
                                    {% endif %}
                                </li>
                                <li>
                                    Inscription
                                </li>
                          {% endif %}

                          {% for type, messages in app.session.flashBag.all %}
                              {% for message in messages %}
                                  <div class="{{ type }}">
                                      {{ message|trans({}, 'FOSUserBundle') }}
                                  </div>
                              {% endfor %}
                          {% endfor %}
                </ul>
          </nav>


</header>
{% endblock %}


{% block body %}
        {% block fos_user_content %}
        {% endblock %}
{% endblock %}

{% block footer %}
        <footer>
          <p>Epic Footer</p>
        </footer>
{% endblock %}


{% block javascripts %}
{% endblock %}
    </body>
</html>
