{% extends 'base.html.twig' %}

{% block content%}
    <h1 style="color:#00c8e4;">Île n°{{island.id}}</h1>

    <ul>
        <li>
            <h4>
              Coordonnées :
            {{ island.localisationX }} ; {{ island.localisationY }}
            </h4>
        </li>
        <li>
            <h4>
            Type :
            {{ island.type|capitalize }}
            </h4>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('island_index') }}">Retour à la Map</a>
        </li>
    </ul>
    <div class="accueil">
      <img src="{{asset("img/backgrounds/island.gif")}}" alt="background accueil">

    </div>

    <audio src="{{asset("son/accueil.mp3")}}" autoplay >
      Votre navigateur ne supporte pas l'élément <code>audio</code>.
    </audio>
{% endblock %}
